{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Nyaser Maps Downloader",
  "version": "2.7.6",
  "identifier": "top.nyaser.maps",
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Nyaser Maps Downloader",
        "width": 1024,
        "height": 768,
        "url": "https://maps.nyase.ru",
        "visible": false,
        "center": true
      },
      {
        "label": "filemanager",
        "title": "Nyaser Maps Downloader - 文件管理器",
        "url": "http://asset.localhost/filemanager/main.html",
        "visible": false,
        "minimizable": false,
        "parent": "main"
      },
      {
        "label": "serverlist",
        "title": "Nyaser Maps Downloader - 服务器列表",
        "url": "http://asset.localhost/serverlist/main.html",
        "visible": false,
        "minimizable": false,
        "parent": "main"
      }
    ],
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": []
      },
      "csp": "default-src 'self' ipc: http://ipc.localhost asset: http://asset.localhost 'unsafe-inline' 'unsafe-eval'"
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": [
      "nsis"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "silent": true,
        "type": "downloadBootstrapper"
      }
    },
    "resources": [
      "assets/",
      "bin/"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEYwODYyMjI3REIwNkE2MjkKUldRcHBnYmJKeUtHOEV6M01HMzQ3REZuYXZVMi9RM0JrNlo5UFR2SG1mTU1mTTBJQU84Wko2akMK",
      "endpoints": [
        "https://tup.nyase.ru/?Nyasers/nyaser-maps-downloader"
      ],
      "windows": {
        "installMode": "passive"
      }
    },
    "deep-link": {
      "desktop": {
        "schemes": [
          "nmd"
        ]
      }
    }
  }
}
